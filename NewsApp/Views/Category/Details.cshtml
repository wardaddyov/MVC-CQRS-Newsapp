@model NewsApp.Models.Category 

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div>
    <h4>Associated News Items</h4>
    @if (Model.NewsItems != null && Model.NewsItems.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Published Date</th>
                    <th>Author</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var news in Model.NewsItems)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => news.Title)</td>
                    <td>@news.PublishedDate.ToString("g")</td>
                    <td>@Html.DisplayFor(modelItem => news.Author)</td>
                    @*<td>
                        <a asp-controller="News" asp-action="Details" asp-route-id="@news.NewsId" class="btn btn-info btn-sm">View</a>
                    </td>*@
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No news items are associated with this category.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
